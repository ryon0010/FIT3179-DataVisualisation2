{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A donut chart showing the number of households by state.",
  "data": {
    "url": "hh_lq_state.csv"
  },
  "title": {
    "text": "Distribution of Household Incomes",
    "anchor": "middle",
    "orient": "bottom",
    "offset": 10
  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "households",
          "as": "TotalHouseholds"
        }
      ],
      "groupby": ["state"]
    },
    {
      "filter": "datum.state != null && datum.TotalHouseholds > 0"
    }
  ],
  "width": 230, 
  "height": 230,  
  "padding": {"top": 0, "bottom": 0, "left": 0, "right": 0},
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 60,
        "stroke": "#fff"
      },
      "encoding": {
        "theta": {
          "field": "TotalHouseholds",
          "type": "quantitative",
          "sort": {
            "op": "sum",
            "field": "TotalHouseholds"
          }
        },
        "color": {
          "field": "state",
          "type": "nominal",
          "scale": {
            "scheme":"tableau20"
          },
          "title": "State"
        },
        "tooltip": [
          {
            "field": "state",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "TotalHouseholds",
            "type": "quantitative",
            "title": "Total Households"
          }
        ]
      }
    }
  ]
}
